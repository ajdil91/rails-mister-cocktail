<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="http://www.iconarchive.com/download/i41420/cedarseed/cocktails/Negroni.ico" alt="logo"></a>

  <!-- Right Navigation -->
  <div "navbar-right">
    <ul class="list-inline">
      <li style="vertical-align: middle;"><%= render "shared/search_bar" %></li>
      <% if user_signed_in? %>
        <li><%= cl_image_tag current_user.photo, class: "avatar" %></li>
        <li style="vertical-align: top; margin-top: 8px;"><%= link_to "Logout", destroy_user_session_path, method: :delete, :style=>'color:#ed173b; text-decoration:none;' %></li>
      <% else %>
        <li><%= link_to "Login", new_user_session_path, class: "btn btn-success" %></li>
        <li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %></li>
      <% end %>
    </ul>
  </div>
</div>
